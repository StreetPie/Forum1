@model Forum1.Models.DBModels.UserAccount

<h2>Редактирование профиля пользователя</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var modelState in ViewData.ModelState.Values)
        {
            foreach (var error in modelState.Errors)
            {
                <div>@error.ErrorMessage</div>
            }
        }
    </div>
}

<form asp-action="UpdateProfile" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FullName">Имя</label>
        <input asp-for="FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Номер телефона</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfBirth">Дата рождения</label>
        <input asp-for="DateOfBirth" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>